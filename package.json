{
  "name": "awesome-react-starter",
  "version": "2.3.0",
  "description": "The awesome React and Next.js starter project from Chess Coders",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tests": "playwright test playwright-tests",
    "tests:desktop": "playwright test playwright-tests --project=\"desktop:email\" --project=\"desktop:e2e (auth)\" --project=\"desktop:ui (no auth)\"",
    "tests:desktop:ui": "playwright test playwright-tests --project=\"desktop:email\" --project=\"desktop:e2e (auth)\" --project=\"desktop:ui (no auth)\" --ui",
    "tests:desktop:headed": "playwright test playwright-tests --project=\"desktop:email\" --project=\"desktop:e2e (auth)\" --project=\"desktop:ui (no auth)\" --headed",
    "tests:mobile": "playwright test playwright-tests --project=\"mobile:chrome:email\" --project=\"mobile:safari:email\" --project=\"mobile:chrome:e2e (auth)\" --project=\"mobile:safari:e2e (auth)\" --project=\"mobile:chrome:ui (no auth)\" --project=\"mobile:safari:ui (no auth)\"",
    "tests:mobile:ui": "playwright test playwright-tests --project=\"mobile:chrome:email\" --project=\"mobile:safari:email\" --project=\"mobile:chrome:e2e (auth)\" --project=\"mobile:safari:e2e (auth)\" --project=\"mobile:chrome:ui (no auth)\" --project=\"mobile:safari:ui (no auth)\" --ui",
    "tests:mobile:headed": "playwright test playwright-tests --project=\"mobile:chrome:email\" --project=\"mobile:safari:email\" --project=\"mobile:chrome:e2e (auth)\" --project=\"mobile:safari:e2e (auth)\" --project=\"mobile:chrome:ui (no auth)\" --project=\"mobile:safari:ui (no auth)\" --headed",
    "mcp:auth": "npx -y @gongrzhe/server-gmail-autoauth-mcp auth"
  },
  "keywords": [
    "react",
    "nextjs",
